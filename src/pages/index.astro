---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.jsx";
import { Image } from "astro:assets";
import heroImg from "../assets/images/hero.jpg";
import transImg from "../assets/images/translation.jpg";
import eduImg from "../assets/images/kids.jpg";
import {
	ADDRESS_LINE_1,
	ADDRESS_LINE_2,
	EMAIL_ADDRESS,
	PHONE_NUMBER,
} from "../consts";
---

<Layout title="Caribbean Language Facility">
	<Header />
	<main class="flex-1">
		<!-- Hero Section -->
		<section class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20">
			<div class="@container">
				<div
					class="flex flex-col gap-10 @[864px]:flex-row @[864px]:items-center"
				>
					<div class="flex flex-col gap-6 text-left @[864px]:w-1/2">
						<h1
							class="hero-animate text-text-light text-4xl font-black leading-tight tracking-[-0.033em] @[480px]:text-5xl"
						>
							Impulsamos tu comunicación, educación y crecimiento
							profesional con enfoque bilingüe.
						</h1>
						<h2
							class="hero-animate text-text-light/80 text-base font-normal leading-normal @[480px]:text-lg"
						>
							Ofrecemos traducción, interpretación, educación
							bilingüe y capacitación en oficios.
						</h2>
						<div
							class="hero-animate flex flex-col md:flex-row flex-wrap gap-4 w-full"
						>
							<a
								href="#services"
								class="btn-press flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-primary text-white text-base font-bold shadow-lg shadow-primary/20 hover:scale-105 hover:bg-primary/90 transition-all duration-300"
							>
								Servicios de Traducción
							</a>
							<a
								href="#education-section"
								class="btn-press flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-secondary text-white text-base font-bold shadow-lg shadow-secondary/20 hover:scale-105 hover:bg-secondary/90 transition-all duration-300"
							>
								Educación Bilingüe
							</a>
							<a
								href="#casa-section"
								class="btn-press flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-white border border-gray-200 text-text-light text-base font-bold shadow-lg shadow-gray-200/50 hover:scale-105 hover:bg-gray-50 transition-all duration-300"
							>
								Centro CASA
							</a>
						</div>
					</div>
					<div
						class="hero-animate img-zoom relative w-full aspect-square rounded-xl overflow-hidden @[864px]:w-1/2"
					>
						<Image
							src={heroImg}
							alt="Niños aprendiendo"
							class="object-cover w-full h-full"
						/>
					</div>
				</div>
			</div>
		</section>

		<!-- About Us -->
		<section class="bg-white py-10 sm:py-20">
			<div
				class="max-w-6xl mx-auto px-4 sm:px-10 flex flex-col gap-8 text-center"
			>
				<h2
					class="reveal text-3xl font-bold tracking-tight text-text-light"
				>
					Quiénes Somos
				</h2>
				<p class="reveal text-lg text-text-light/80 max-w-4xl mx-auto">
					En Caribbean Language Facility nos dedicamos a la traducción
					profesional, interpretación, educación bilingüe y formación
					vocacional. Tenemos años de experiencia ayudando a familias,
					estudiantes y empresas.
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-4">
					<div
						class="reveal-left card-hover p-6 rounded-xl border border-gray-200 bg-white"
					>
						<h3 class="text-xl font-bold text-primary mb-3">
							Nuestra Visión
						</h3>
						<p class="text-text-light/70">
							Formar personas capaces, seguras y bilingües para el
							mundo global.
						</p>
					</div>
					<div
						class="reveal-right card-hover p-6 rounded-xl border border-gray-200 bg-white"
					>
						<h3 class="text-xl font-bold text-secondary mb-3">
							Nuestros Valores
						</h3>
						<p class="text-text-light/70">
							Profesionalismo, Ética, Educación con propósito,
							Inclusión, Excelencia.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Services Sections -->
		<div
			class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20 flex flex-col gap-16"
		>
			<!-- Translation & Interpretation -->
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center"
				id="services"
			>
				<div
					class="reveal-right img-zoom relative h-64 md:h-full min-h-[300px] rounded-xl overflow-hidden md:order-2"
				>
					<Image
						src={transImg}
						alt="Servicios de traducción"
						class="object-cover w-full h-full"
					/>
				</div>
				<div class="reveal-left md:order-1">
					<div class="flex items-center gap-3 mb-4">
						<div class="h-12 w-12 shrink-0">
							<img
								src="/images/logos/INSIlogo.png"
								alt="Insignia Traducción"
								class="h-full w-full object-contain"
							/>
						</div>
						<h2 class="text-3xl font-bold text-text-light">
							Traducción e Interpretación
						</h2>
					</div>
					<div class="space-y-6">
						<div>
							<h3 class="text-xl font-bold mb-2">
								Servicios de Traducción
							</h3>
							<ul
								class="list-disc list-inside text-text-light/80 space-y-1"
							>
								<li>Documentos legales</li>
								<li>Migración e inmigración</li>
								<li>Certificados</li>
								<li>Documentos académicos</li>
								<li>Cartas formales y comerciales</li>
							</ul>
						</div>
						<div>
							<h3 class="text-xl font-bold mb-2">
								Interpretación
							</h3>
							<ul
								class="list-disc list-inside text-text-light/80 space-y-1"
							>
								<li>Cortes y procesos legales</li>
								<li>Citas médicas</li>
								<li>Reuniones formales</li>
								<li>Entornos educativos y religiosos</li>
							</ul>
						</div>
						<div>
							<h3 class="text-xl font-bold mb-2">Asesorías</h3>
							<ul
								class="list-disc list-inside text-text-light/80 space-y-1"
							>
								<li>
									Procesos migratorios comerciales, legales y
									administrativos
								</li>
								<li>Asesorías vacacionales</li>
							</ul>
						</div>
						<div
							class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 text-blue-700 rounded-full font-bold"
						>
							<span
								class="material-symbols-outlined text-sm"
								aria-hidden="true">language</span
							>
							Español ⇄ Inglés
						</div>
						<div>
							<button
								onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Traducción/Interpretación' }))"
								class="btn-press mt-4 w-full sm:w-auto px-6 py-3 bg-primary text-white font-bold rounded-lg hover:bg-primary/90 transition-colors shadow-md text-sm"
							>
								Solicitar Información
							</button>
						</div>
					</div>
				</div>
			</div>

			<!-- Education Services (Lisa's Kids) -->
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center md:flex-row-reverse"
				id="education-section"
			>
				<div
					class="reveal-right img-zoom relative h-64 md:h-full min-h-[300px] rounded-xl overflow-hidden md:order-2"
				>
					<Image
						src={eduImg}
						alt="Educación bilingüe para niños"
						class="object-cover w-full h-full"
					/>
				</div>
				<div class="reveal-left md:order-1">
					<div class="flex items-center gap-3 mb-4">
						<span
							class="material-symbols-outlined text-4xl text-secondary"
							aria-hidden="true">school</span
						>
						<h2 class="text-3xl font-bold text-text-light">
							Servicios Educativos
						</h2>
					</div>
					<div class="flex items-center gap-3 mb-4">
						<div class="h-12 w-12 shrink-0">
							<img
								src="/images/logos/CASAlogo.png"
								alt="Logo CASA"
								class="h-full w-full object-contain"
							/>
						</div>
						<h3 class="text-xl font-semibold text-secondary">
							Lisa’s Kids Casa Bilingüe
						</h3>
					</div>
					Escuela bilingüe para niños y adolescentes. Enseñamos inglés como
					segundo idioma y damos refuerzo académico.

					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
						<div class="bg-orange-50 p-4 rounded-lg">
							<h4 class="font-bold mb-2">Programas</h4>
							<ul class="text-sm list-disc list-inside space-y-1">
								<li>Educación básica</li>
								<li>Apoyo escolar</li>
								<li>Preparación académica</li>
							</ul>
						</div>
						<div class="bg-orange-50 p-4 rounded-lg">
							<h4 class="font-bold mb-2">Modalidades</h4>
							<ul class="text-sm list-disc list-inside space-y-1">
								<li>Presencial</li>
								<li>En línea</li>
							</ul>
						</div>
					</div>
					<div class="sm:col-span-2 mt-2">
						<button
							onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Educación Bilingüe (Lisa\'s Kids)' }))"
							class="btn-press w-full sm:w-auto px-6 py-3 bg-secondary text-white font-bold rounded-lg hover:bg-secondary/90 transition-colors shadow-md text-sm"
						>
							Solicitar Información
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- CASA & Classes Grid -->
		<section
			class="grid grid-cols-1 md:grid-cols-2 gap-8"
			id="casa-section"
		>
			<!-- CASA -->
			<div
				class="reveal-left card-hover p-8 rounded-xl border border-gray-200 bg-white shadow-sm h-full flex flex-col"
			>
				<div class="h-20 mb-6 flex items-start">
					<img
						src="/images/logos/CLFlogo.png"
						alt="CLF Logo"
						class="h-full w-auto object-contain"
					/>
				</div>
				<h3 class="text-2xl font-bold mb-3">
					CASA – Career and Skills Academy
				</h3>
				Centro de Capacitación en Carreras y Oficios con enfoque bilingüe.
				<ul class="space-y-2 mb-6 text-text-light/90">
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							aria-hidden="true">check_circle</span
						> Idiomas para el trabajo
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							aria-hidden="true">check_circle</span
						> Atención al cliente
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							aria-hidden="true">check_circle</span
						> Carreras técnicas y oficios
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							aria-hidden="true">check_circle</span
						> Capacitación práctica
					</li>
				</ul>
				<div class="text-sm font-semibold text-accent mt-6">
					Modalidad: Presencial • Online • Bilingüe
				</div>
				<div class="mt-auto pt-6 flex justify-end">
					<button
						onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Capacitación (CASA)' }))"
						class="btn-press w-full sm:w-auto px-6 py-3 border border-accent text-accent font-bold rounded-lg hover:bg-accent hover:text-white transition-all text-sm"
					>
						Solicitar Información
					</button>
				</div>
			</div>

			<!-- Classes & Academy -->
			<div
				class="reveal-right card-hover p-8 rounded-xl border border-gray-200 bg-white shadow-sm h-full flex flex-col"
			>
				<div class="text-blue-500 mb-4">
					<span
						class="material-symbols-outlined text-5xl"
						aria-hidden="true">cast_for_education</span
					>
				</div>
				<h3 class="text-2xl font-bold mb-3">Clases y Capacitación</h3>
				Soluciones de aprendizaje para ti.
				<ul class="space-y-3">
					<li
						class="stagger-item flex items-center gap-3 p-3 bg-gray-50 rounded-lg"
					>
						<span
							class="icon-bounce material-symbols-outlined"
							aria-hidden="true">menu_book</span
						>
						Clases de inglés y español
					</li>
					<li
						class="stagger-item flex items-center gap-3 p-3 bg-gray-50 rounded-lg"
					>
						<span
							class="icon-bounce material-symbols-outlined"
							aria-hidden="true">person</span
						> Cursos personalizados
					</li>
					<li
						class="stagger-item flex items-center gap-3 p-3 bg-gray-50 rounded-lg"
					>
						<span
							class="icon-bounce material-symbols-outlined"
							aria-hidden="true">business</span
						> Formación para empresas
					</li>
					<li
						class="stagger-item flex items-center gap-3 p-3 bg-gray-50 rounded-lg"
					>
						<span
							class="icon-bounce material-symbols-outlined"
							aria-hidden="true">group</span
						>
						Capacitación para jóvenes y adultos
					</li>
				</ul>
				<div class="mt-auto pt-6 flex justify-end">
					<button
						onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Otro' }))"
						class="btn-press w-full sm:w-auto px-6 py-3 border border-primary text-primary font-bold rounded-lg hover:bg-primary hover:text-white transition-all text-sm"
					>
						Solicitar Información
					</button>
				</div>
			</div>
		</section>
	</main>

	<!-- Why Choose Us -->
	<section class="bg-primary text-white py-14">
		<div class="max-w-6xl mx-auto px-4 sm:px-10 text-center">
			<h2 class="reveal text-3xl font-bold mb-10">¿Por qué elegirnos?</h2>
			<div class="flex flex-wrap justify-center gap-6">
				<div
					class="badge-float flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined" aria-hidden="true"
						>verified</span
					> Servicios integrados
				</div>
				<div
					class="badge-float flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined" aria-hidden="true"
						>verified</span
					> Enfoque bilingüe real
				</div>
				<div
					class="badge-float flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined" aria-hidden="true"
						>verified</span
					> Experiencia
				</div>
				<div
					class="badge-float flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined" aria-hidden="true"
						>verified</span
					> Atención personalizada
				</div>
				<div
					class="badge-float flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined" aria-hidden="true"
						>verified</span
					> Excelencia
				</div>
			</div>
		</div>
	</section>

	<!-- Brand Ecosystem -->
	<section class="py-12 bg-gray-50 border-y border-gray-100">
		<div class="max-w-6xl mx-auto px-4 sm:px-10">
			<div class="text-center mb-10">
				<h2
					class="text-xl font-bold text-text-light uppercase tracking-wider"
				>
					Caribbean Language Facility Group
				</h2>
				<p class="text-sm text-text-light/60 mt-2 font-semibold">
					Nuestras Divisiones
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
				<!-- Lisa's Kids -->
				<div
					class="reveal-scale flex flex-col items-center gap-3 p-4 hover:bg-white hover:shadow-md rounded-xl transition-all duration-300 hover:-translate-y-1"
					data-delay="0"
				>
					<img
						src="/images/logos/CASAlogo.png"
						alt="Lisa's Kids"
						class="h-16 w-auto object-contain brightness-90 transition-transform duration-300 hover:scale-110"
					/>
					<h3 class="text-sm font-bold text-secondary leading-tight">
						Educación Infantil Bilingüe
					</h3>
					<p class="text-xs text-text-light/70">
						Lisa's Kids Casa Bilingüe
					</p>
				</div>

				<!-- CASA -->
				<div
					class="reveal-scale flex flex-col items-center gap-3 p-4 hover:bg-white hover:shadow-md rounded-xl transition-all duration-300 hover:-translate-y-1"
					data-delay="150"
				>
					<img
						src="/images/logos/CLFlogo.png"
						alt="CLF"
						class="h-16 w-auto object-contain transition-transform duration-300 hover:scale-110"
					/>
					<h3 class="text-sm font-bold text-accent leading-tight">
						Capacitación Técnica y Profesional
					</h3>
					<p class="text-xs text-text-light/70">
						CASA – Career and Skills Academy
					</p>
				</div>

				<!-- Translation -->
				<div
					class="reveal-scale flex flex-col items-center gap-3 p-4 hover:bg-white hover:shadow-md rounded-xl transition-all duration-300 hover:-translate-y-1"
					data-delay="300"
				>
					<img
						src="/images/logos/INSIlogo.png"
						alt="Traducciones"
						class="h-16 w-auto object-contain transition-transform duration-300 hover:scale-110"
					/>
					<h3 class="text-sm font-bold text-primary leading-tight">
						Servicios Lingüísticos
					</h3>
					<p class="text-xs text-text-light/70">
						Traducciones e Interpretación
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<div class="reveal-left flex flex-col gap-6">
				<h2 class="text-3xl font-bold tracking-tight text-text-light">
					Contáctanos
				</h2>
				Estamos listos para ayudarte. Escríbenos para recibir información.

				<div class="flex flex-col gap-4 mt-4">
					<div class="flex items-start gap-4">
						<div class="p-3 bg-blue-100 text-primary rounded-lg">
							<span
								class="material-symbols-outlined"
								aria-hidden="true">location_on</span
							>
						</div>
						<div>
							<h4 class="font-bold text-lg">Ubicación</h4>
							<p class="text-text-light/70">
								{ADDRESS_LINE_1},<br />{ADDRESS_LINE_2}
							</p>
						</div>
					</div>
					<div class="flex items-center gap-4">
						<div class="p-3 bg-blue-100 text-primary rounded-lg">
							<span
								class="material-symbols-outlined"
								aria-hidden="true">email</span
							>
						</div>
						<div>
							<h4 class="font-bold text-lg">Email</h4>
							<p class="text-text-light/70">
								{EMAIL_ADDRESS}
							</p>
						</div>
					</div>
					<div class="flex items-center gap-4">
						<div class="p-3 bg-blue-100 text-primary rounded-lg">
							<span
								class="material-symbols-outlined"
								aria-hidden="true">call</span
							>
						</div>
						<div>
							<h4 class="font-bold text-lg">Teléfono</h4>
							<p class="text-text-light/70">{PHONE_NUMBER}</p>
						</div>
					</div>
				</div>
			</div>

			<!-- React Contact Form -->
			<div class="reveal-right flex flex-col gap-6">
				<ContactForm client:visible />

				<!-- Google Maps Embed -->
				<div
					class="w-full h-48 rounded-xl overflow-hidden shadow-sm border border-gray-200"
				>
					<iframe
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3925.327424660398!2d-61.42875142416805!3d10.313888367540258!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c3588cea0155555%3A0x63319042217c1810!2sTrinidad%20and%20Tobago!5e0!3m2!1sen!2s!4v1703020000000!5m2!1sen!2s"
						width="100%"
						height="100%"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
		</div>
	</section>
	<Footer />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.jsx";
import { Image } from "astro:assets";
import heroImg from "../assets/images/hero.jpg";
import transImg from "../assets/images/translation.jpg";
import eduImg from "../assets/images/kids.jpg";
---

<Layout title="Caribbean Language Facility">
	<Header />
	<main class="flex-1">
		<!-- Hero Section -->
		<div class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20">
			<div class="@container">
				<div
					class="flex flex-col gap-10 @[864px]:flex-row @[864px]:items-center"
				>
					<div class="flex flex-col gap-6 text-left @[864px]:w-1/2">
						<h1
							class="text-text-light dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] @[480px]:text-5xl"
						>
							Impulsamos tu comunicación, educación y crecimiento
							profesional con enfoque bilingüe.
						</h1>
						<h2
							class="text-text-light/80 dark:text-white/80 text-base font-normal leading-normal @[480px]:text-lg"
						>
							Ofrecemos traducción, interpretación, educación
							bilingüe y capacitación en oficios.
						</h2>
						<div
							class="flex flex-col md:flex-row flex-wrap gap-4 w-full"
						>
							<a
								href="#services"
								class="flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-primary text-white text-base font-bold shadow-lg shadow-primary/20 hover:scale-105 hover:bg-primary/90 transition-all duration-300"
							>
								Servicios de Traducción
							</a>
							<a
								href="#education-section"
								class="flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-secondary text-white text-base font-bold shadow-lg shadow-secondary/20 hover:scale-105 hover:bg-secondary/90 transition-all duration-300"
							>
								Educación Bilingüe
							</a>
							<a
								href="#casa-section"
								class="flex-1 min-w-[200px] flex items-center justify-center rounded-xl py-3 px-6 bg-white dark:bg-white/10 border border-gray-200 dark:border-white/10 text-text-light dark:text-white text-base font-bold shadow-lg shadow-gray-200/50 dark:shadow-none hover:scale-105 hover:bg-gray-50 dark:hover:bg-white/20 transition-all duration-300"
							>
								Centro CASA
							</a>
						</div>
					</div>
					<div
						class="relative w-full aspect-square rounded-xl overflow-hidden @[864px]:w-1/2"
					>
						<Image
							src={heroImg}
							alt="Niños aprendiendo"
							class="object-cover w-full h-full"
						/>
					</div>
				</div>
			</div>
		</div>

		<!-- About Us -->
		<div class="bg-white dark:bg-white/5 py-10 sm:py-20">
			<div
				class="max-w-6xl mx-auto px-4 sm:px-10 flex flex-col gap-8 text-center"
			>
				<h2
					class="text-3xl font-bold tracking-tight text-text-light dark:text-white"
				>
					Quiénes Somos
				</h2>
				<p
					class="text-lg text-text-light/80 dark:text-white/80 max-w-4xl mx-auto"
				>
					En Caribbean Language Facility nos dedicamos a la traducción
					profesional, interpretación, educación bilingüe y formación
					vocacional. Tenemos años de experiencia ayudando a familias,
					estudiantes y empresas.
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-4">
					<div
						class="p-6 rounded-xl border border-gray-200 dark:border-white/10"
					>
						<h3 class="text-xl font-bold text-primary mb-3">
							Nuestra Visión
						</h3>
						<p class="text-text-light/70 dark:text-white/70">
							Formar personas capaces, seguras y bilingües para el
							mundo global.
						</p>
					</div>
					<div
						class="p-6 rounded-xl border border-gray-200 dark:border-white/10"
					>
						<h3 class="text-xl font-bold text-secondary mb-3">
							Nuestros Valores
						</h3>
						<p class="text-text-light/70 dark:text-white/70">
							Profesionalismo, Ética, Educación con propósito,
							Inclusión, Excelencia.
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Services Sections -->
		<div
			class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20 flex flex-col gap-16"
		>
			<!-- Translation & Interpretation -->
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center"
				id="services"
			>
				<div
					class="relative h-64 md:h-full min-h-[300px] rounded-xl overflow-hidden md:order-2"
				>
					<Image
						src={transImg}
						alt="Servicios de traducción"
						class="object-cover w-full h-full"
					/>
				</div>
				<div class="md:order-1">
					<div class="flex items-center gap-3 mb-4">
						<span
							class="material-symbols-outlined text-4xl text-primary"
							>translate</span
						>
						<h2
							class="text-3xl font-bold text-text-light dark:text-white"
						>
							Traducción e Interpretación
						</h2>
					</div>
					<div class="space-y-6">
						<div>
							<h3 class="text-xl font-bold mb-2">
								Servicios de Traducción
							</h3>
							<ul
								class="list-disc list-inside text-text-light/80 dark:text-white/80 space-y-1"
							>
								<li>Documentos legales</li>
								<li>Migración e inmigración</li>
								<li>Certificados</li>
								<li>Documentos académicos</li>
								<li>Cartas formales y comerciales</li>
							</ul>
						</div>
						<div>
							<h3 class="text-xl font-bold mb-2">
								Interpretación
							</h3>
							<ul
								class="list-disc list-inside text-text-light/80 dark:text-white/80 space-y-1"
							>
								<li>Cortes y procesos legales</li>
								<li>Citas médicas</li>
								<li>Reuniones formales</li>
								<li>Entornos educativos y religiosos</li>
							</ul>
						</div>
						<div
							class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full font-bold"
						>
							<span class="material-symbols-outlined text-sm"
								>language</span
							>
							Español ⇄ Inglés
						</div>
						<div>
							<button
								onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Traducción/Interpretación' }))"
								class="mt-4 px-6 py-2 bg-primary text-white font-bold rounded-lg hover:bg-primary/90 transition-colors shadow-md text-sm"
							>
								Solicitar Información
							</button>
						</div>
					</div>
				</div>
			</div>

			<!-- Education Services (Lisa's Kids) -->
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center md:flex-row-reverse"
				id="education-section"
			>
				<div
					class="relative h-64 md:h-full min-h-[300px] rounded-xl overflow-hidden md:order-2"
				>
					<Image
						src={eduImg}
						alt="Educación bilingüe para niños"
						class="object-cover w-full h-full"
					/>
				</div>
				<div class="md:order-1">
					<div class="flex items-center gap-3 mb-4">
						<span
							class="material-symbols-outlined text-4xl text-secondary"
							>school</span
						>
						<h2
							class="text-3xl font-bold text-text-light dark:text-white"
						>
							Servicios Educativos
						</h2>
					</div>
					<h3 class="text-xl font-semibold text-secondary mb-4">
						Lisa’s Kids Casa Bilingüe
					</h3>
					Escuela bilingüe para niños y adolescentes. Enseñamos inglés
					como segundo idioma y damos refuerzo académico.

					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
						<div
							class="bg-orange-50 dark:bg-orange-900/20 p-4 rounded-lg"
						>
							<h4 class="font-bold mb-2">Programas</h4>
							<ul class="text-sm list-disc list-inside space-y-1">
								<li>Educación básica</li>
								<li>Apoyo escolar</li>
								<li>Preparación académica</li>
							</ul>
						</div>
						<div
							class="bg-orange-50 dark:bg-orange-900/20 p-4 rounded-lg"
						>
							<h4 class="font-bold mb-2">Modalidades</h4>
							<ul class="text-sm list-disc list-inside space-y-1">
								<li>Presencial</li>
								<li>En línea</li>
							</ul>
						</div>
					</div>
					<div class="sm:col-span-2 mt-2">
						<button
							onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Educación Bilingüe (Lisa\'s Kids)' }))"
							class="w-full sm:w-auto px-6 py-2 bg-secondary text-white font-bold rounded-lg hover:bg-secondary/90 transition-colors shadow-md text-sm"
						>
							Solicitar Información
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- CASA & Classes Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8" id="casa-section">
			<!-- CASA -->
			<div
				class="p-8 rounded-xl border border-gray-200 dark:border-white/20 bg-white dark:bg-background-dark shadow-sm h-full flex flex-col"
			>
				<div class="text-accent mb-4">
					<span class="material-symbols-outlined text-5xl"
						>engineering</span
					>
				</div>
				<h3 class="text-2xl font-bold mb-3">
					CASA – Career & Skills Training Center
				</h3>
				Centro de Capacitación en Carreras y Oficios con enfoque bilingüe.
				<ul
					class="space-y-2 mb-6 text-text-light/90 dark:text-white/90"
				>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							>check_circle</span
						> Idiomas para el trabajo
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							>check_circle</span
						> Atención al cliente
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							>check_circle</span
						> Carreras técnicas y oficios
					</li>
					<li class="flex items-center gap-2">
						<span
							class="material-symbols-outlined text-accent text-sm"
							>check_circle</span
						> Capacitación práctica
					</li>
				</ul>
				<div class="text-sm font-semibold text-accent mt-6">
					Modalidad: Presencial • Online • Bilingüe
				</div>
				<div class="mt-auto pt-6 flex justify-end">
					<button
						onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Capacitación (CASA)' }))"
						class="px-4 py-2 border border-accent text-accent font-bold rounded-lg hover:bg-accent hover:text-white transition-all text-sm"
					>
						Más Info
					</button>
				</div>
			</div>

			<!-- Classes & Training -->
			<div
				class="p-8 rounded-xl border border-gray-200 dark:border-white/20 bg-white dark:bg-background-dark shadow-sm h-full flex flex-col"
			>
				<div class="text-blue-500 mb-4">
					<span class="material-symbols-outlined text-5xl"
						>cast_for_education</span
					>
				</div>
				<h3 class="text-2xl font-bold mb-3">Clases y Capacitación</h3>
				Soluciones de aprendizaje para ti.
				<ul class="space-y-3">
					<li
						class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-white/5 rounded-lg"
					>
						<span class="material-symbols-outlined">menu_book</span>
						Clases de inglés y español
					</li>
					<li
						class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-white/5 rounded-lg"
					>
						<span class="material-symbols-outlined">person</span> Cursos
						personalizados
					</li>
					<li
						class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-white/5 rounded-lg"
					>
						<span class="material-symbols-outlined">business</span> Formación
						para empresas
					</li>
					<li
						class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-white/5 rounded-lg"
					>
						<span class="material-symbols-outlined">group</span>
						Capacitación para jóvenes y adultos
					</li>
				</ul>
				<div class="mt-auto pt-6 flex justify-end">
					<button
						onclick="window.dispatchEvent(new CustomEvent('selectService', { detail: 'Otro' }))"
						class="px-4 py-2 border border-blue-500 text-blue-500 font-bold rounded-lg hover:bg-blue-500 hover:text-white transition-all text-sm"
					>
						Consultar
					</button>
				</div>
			</div>
		</div>
	</main>

	<!-- Why Choose Us -->
	<div class="bg-primary text-white py-14">
		<div class="max-w-6xl mx-auto px-4 sm:px-10 text-center">
			<h2 class="text-3xl font-bold mb-10">¿Por qué elegirnos?</h2>
			<div class="flex flex-wrap justify-center gap-6">
				<div
					class="flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">verified</span> Servicios
					integrados
				</div>
				<div
					class="flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">verified</span> Enfoque
					bilingüe real
				</div>
				<div
					class="flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">verified</span> Experiencia
				</div>
				<div
					class="flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">verified</span> Atención
					personalizada
				</div>
				<div
					class="flex items-center gap-2 bg-white/10 px-5 py-3 rounded-full backdrop-blur-sm"
				>
					<span class="material-symbols-outlined">verified</span> Excelencia
				</div>
			</div>
		</div>
	</div>

	<!-- Contact Section -->
	<div class="max-w-6xl mx-auto px-4 sm:px-10 py-10 sm:py-20">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<div class="flex flex-col gap-6">
				<h2
					class="text-3xl font-bold tracking-tight text-text-light dark:text-white"
				>
					Contáctanos
				</h2>
				Estamos listos para ayudarte. Escríbenos para recibir información.

				<div class="flex flex-col gap-4 mt-4">
					<div class="flex items-start gap-4">
						<div
							class="p-3 bg-blue-100 dark:bg-blue-900/30 text-primary rounded-lg"
						>
							<span class="material-symbols-outlined"
								>location_on</span
							>
						</div>
						<div>
							<h4 class="font-bold text-lg">Ubicación</h4>
							<p class="text-text-light/70 dark:text-white/70">
								Princes Town, Trinidad & Tobago<br />Vistabella,
								San Fernando
							</p>
						</div>
					</div>
					<div class="flex items-center gap-4">
						<div
							class="p-3 bg-blue-100 dark:bg-blue-900/30 text-primary rounded-lg"
						>
							<span class="material-symbols-outlined">email</span>
						</div>
						<div>
							<h4 class="font-bold text-lg">Email</h4>
							<p class="text-text-light/70 dark:text-white/70">
								Caribbeanlanguagefacility@gmail.com
							</p>
						</div>
					</div>
					<div class="flex items-center gap-4">
						<div
							class="p-3 bg-blue-100 dark:bg-blue-900/30 text-primary rounded-lg"
						>
							<span class="material-symbols-outlined">call</span>
						</div>
						<div>
							<h4 class="font-bold text-lg">Teléfono</h4>
							<p class="text-text-light/70 dark:text-white/70">
								868-269-3510
							</p>
						</div>
					</div>
				</div>
			</div>

			<!-- React Contact Form -->
			<div class="flex flex-col gap-6">
				<ContactForm client:visible />

				<!-- Google Maps Embed -->
				<div
					class="w-full h-48 rounded-xl overflow-hidden shadow-sm border border-gray-200 dark:border-white/10"
				>
					<iframe
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3925.327424660398!2d-61.42875142416805!3d10.313888367540258!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c3588cea0155555%3A0x63319042217c1810!2sTrinidad%20and%20Tobago!5e0!3m2!1sen!2s!4v1703020000000!5m2!1sen!2s"
						width="100%"
						height="100%"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
		</div>
	</div>
	<Footer />
</Layout>
